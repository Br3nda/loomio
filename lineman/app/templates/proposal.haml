.card-row.expanded-motion.cuke-current-proposal{ng_hide: 'proposal == null'}
  .card
    .card__header
      %h2
        {{proposal.name}}
      %p proposed by {{proposal.author.name}}
      %p closing {{proposal.closing_at | date:'medium' }}
    .card__content
      .pull-right
        %i.icon-pie-graph{style: "font-size: 10em; color: green;"}
      {{proposal.description}}
    .votes
      yes: {{proposal.yes_votes_count}}
      no: {{proposal.no_votes_count}}
      abstain: {{proposal.abstain_votes_count}}
      block: {{proposal.block_votes_count}}
    .clearfix
    .row.decision-buttons
      .agree{ng_click: 'selectPosition("yes")'}
        %i.fa.fa-smile-o{style: "color: green"}
      .abstain{ng_click: 'selectPosition("abstain")'}
        %i.fa.fa-meh-o{style: "color: orange"}
      .disagree{ng_click: 'selectPosition("no")'}
        %i.fa.fa-frown-o{style: "color: pink"}
      .block{ng_click: 'selectPosition("block")'}
        %i.fa.fa-warning{style: "color: red"}

    .row.statement-form{ng_show: 'voteFormIsExpanded'}
      %form.form-horizontal{ng_submit: 'submitVote()'}
        %fieldset.form-horizontal{ng_disable: 'voteFormIsDisabled'}
          .form-group
            %label.col-xs-3.control-label.vertical-center
              Your position:
            .col-xs-offset-3.col-xs-9
              %p.form-control
                {{newVote.position}}
          .form-group
            %label.col-xs-3.control-label.vertical-center
              Your statement:
            .col-xs-offset-3.col-xs-9
              %textarea#input-statement.form-control{ng_model: 'newVote.statement'}
          .form-inline.col-xs-offset-3
            %button.btn.btn-primary{type: :submit}
              Vote
            %button.btn.btn-warning{ng_click: 'cancelVote()'}
              Cancel

    -#.row.new-position
      -#.agree
        -#%form
          -#.form-group
            -#%label Agree
            -#%textarea.form-control{rows: 3}
          -#%button.btn
            -#Submit
      -#.abstain
        -#%form
          -#.form-group
            -#%label Abstain
            -#%textarea.form-control{rows: 3}
          -#%button.btn
            -#Submit
      -#.disagree
        -#%form
          -#.form-group
            -#%label Disagree
            -#%textarea.form-control{rows: 3}
          -#%button.btn
            -#Submit
      -#.block
        -#%form
          -#.form-group
            -#%label Block
            -#%textarea.form-control{rows: 3}
          -#%button.btn
            -#Submit
    -#.card__show-more
      -#%a View positions

