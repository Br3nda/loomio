.row
  .span9#group-setup
    = simple_form_for @group_setup, url: finish_group_path, method: :put do |f|
      %ul.nav.nav-tabs
        %li.disabled.active
          %a{ href: "#group-tab" }
            = t("group_setup_form.tabs.group")
        %li.disabled
          %a{ href: "#discussion-tab" }
            = t("group_setup_form.tabs.discussion")
        %li.disabled
          %a{ href: "#motion-tab" }
            = t("group_setup_form.tabs.motion")
        %li.disabled
          %a{ href: "#invite-tab" }
            = t("group_setup_form.tabs.invites")
      .tab-content#wizard-tabs
        .tab-pane.active#group-tab
          .row
            .span9
              %h1= t("group_setup_form.group_header")
              .control-group
                = f.input :group_name, input_html: { class: 'validate-presence', value: @group.name }
                %span.inline-help= t("group_setup_form.errors.group_name")
              .control-group
                = f.input :group_description, input_html: { class: 'validate-presence' }
                %span.inline-help= t("group_setup_form.errors.group_description")
              %h2= t("group_setup_form.group_settings_header")
          .row
            .span5
              %p= t("group_setup_form.group_settings_blurb")
              = f.input :viewable_by, :collection => {'Public - anyone with the link can see this group' => 'everyone', 'Members - only members of this group can see it' => 'members'}, :as => 'radio_buttons'
              %br
              = f.input :members_invitable_by, :as => "radio_buttons", :collection => {'All group members' => 'members', 'Admins only' => 'admins'}
        .tab-pane#discussion-tab
          .row
            .span5
              %h1= t("group_setup_form.discussion_header")
              %p= t("group_setup_form.discussion_blurb")
          .row
            .span9
              .control-group
                = f.input :discussion_title, input_html: { class: 'validate-presence' }
                %span.inline-help= t("group_setup_form.errors.discussion_title")
              .control-group
                = f.input :discussion_description, input_html: { class: 'validate-presence' }
                %span.inline-help= t("group_setup_form.errors.discussion_description")
        .tab-pane#motion-tab
          .row
            .span5
              %h1= t("group_setup_form.motion_header")
              %p= t("group_setup_form.motion_blurb")
          .row
            .span9
              .control-group
                = f.input :motion_title, input_html: { class: 'validate-presence' }
                %span.inline-help= t("group_setup_form.errors.motion_title")
              .control-group
                = f.input :motion_description, input_html: { class: 'validate-presence' }
                %span.inline-help= t("group_setup_form.errors.motion_description")
              .control-group.motion-closing-inputs
                = f.input :close_at_date, as: :date_picker, input_html: { class: 'motion-close-at-date' }
                = f.input :close_at_time, as: :select, collection: populate_time_select, include_blank: false, label: false, input_html: { class: 'motion-close-at-time' }
                = f.time_zone_select :close_at_time_zone, nil, { default: @current_user.time_zone }, class: 'motion-close-at-time-zone'
                %span.inline-help= t("group_setup_form.errors.motion_closing_inputs")
        .tab-pane#invite-tab
          .row
            .span9
              %h1= t("group_setup_form.invites_header")
              .control-group
                = f.input :admin_email, input_html: { class: 'validate-presence', :value => current_user.email, disabled: true }
                %span.inline-help= t("group_setup_form.errors.admin_email")
              .control-group
                = label 'invitees', t("group_setup_form.invitees_label"), class: "control-label", for: "invitees"
                = text_area_tag 'invitees', nil, class: 'validate-emails', placeholder: t("group_setup_form.invitees_placeholder")
                %span.email-validation-help
                = f.input :members_list, as: :hidden
              .control-group
                = f.input :invite_body, input_html: { class: 'validate-presence', value: t("invitation_to_join_group.body_editable", group: @group.name) }
                %span.inline-help= t("group_setup_form.errors.invites_body")
      .row
        .span5
          = f.submit 'Send invites', class: 'btn btn-info btn-large', id: 'send_invites', :data => { :disable_with => "Send invites" }
          = link_to 'Next', '#', class: 'btn btn-info btn-large', id: 'next'
          = link_to 'Back', '#', class: 'btn btn-warning btn-large', id: 'prev'
      .row
        .span5
          = "saved x minutes ago"
