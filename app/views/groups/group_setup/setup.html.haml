.row
  .span9#group-setup
    = simple_form_for @group_setup, url: finish_group_path, method: :put do |f|
      %ul.nav.nav-tabs
        %li.disabled.active
          %a{ href: "#group-tab" }
            = t("group_setup_form.tabs.group")
        %li.disabled
          %a{ href: "#discussion-tab" }
            = t("group_setup_form.tabs.discussion")
        %li.disabled
          %a{ href: "#motion-tab" }
            = t("group_setup_form.tabs.motion")
        %li.disabled
          %a{ href: "#invite-tab" }
            = t("group_setup_form.tabs.invites")
      .tab-content#wizard-tabs
        .tab-pane.active#group-tab
          .row
            .span5
              %h1= t("group_setup_form.group_header")
              .control-group
                = f.input :group_name, input_html: { class: 'validate-presence' }
                .inline-help= t("group_setup_form.errors.group_name")
              .control-group
                = f.input :group_description, input_html: { class: 'validate-presence' }
                .inline-help= t("group_setup_form.errors.group_description")
              %h2= t("group_setup_form.group_settings_header")
          .row
            .span5
              %p= t("group_setup_form.group_settings_blurb")
              = f.input :viewable_by, :collection => {'Public - anyone with the link can see this group' => 'everyone', 'Members - only members of this group can see it' => 'members'}, :as => 'radio_buttons'
              %br
              = f.input :members_invitable_by, :as => "radio_buttons", :collection => {'All group members' => 'members', 'Admins only' => 'admins'}
        .tab-pane#discussion-tab
          .row
            .span5
              %h1= t("group_setup_form.discussion_header")
              %p= t("group_setup_form.discussion_blurb")
          .row
            .span5
              .control-group
                = f.input :discussion_title, input_html: { class: 'validate-presence' }
                .inline-help= t("group_setup_form.errors.discussion_title")
              .control-group
                = f.input :discussion_description, input_html: { class: 'validate-presence' }
                .inline-help= t("group_setup_form.errors.discussion_description")
        .tab-pane#motion-tab
          .row
            .span5
              %h1= t("group_setup_form.motion_header")
              %p= t("group_setup_form.motion_blurb")
          .row
            .span5
              .control-group
                = f.input :motion_title, input_html: { class: 'validate-presence' }
                .inline-help= t("group_setup_form.errors.motion_title")
              .control-group
                = f.input :motion_description, input_html: { class: 'validate-presence' }
                .inline-help= t("group_setup_form.errors.motion_description")
              = render 'motions/close_at_inputs', form: f, user: @current_user
        .tab-pane#invite-tab
          = render 'groups/invite_users', form: f, group: @group
      .row
        .span5
          = f.submit 'Send invites', class: 'btn btn-info btn-large run-validations', id: 'send_invites', :data => { :disable_with => "Send invites" }
          = link_to 'Next', '#', class: 'btn btn-info btn-large', id: 'next'
          = link_to 'Back', '#', class: 'btn btn-warning btn-large', id: 'prev'
      .row
        .span5#saved-at
