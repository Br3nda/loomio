%h1= t("invitation.invites_header")
%br
.control-group
  %p= t("invitation.recipients")
  = text_area_tag 'invitees', nil, class: 'validate-emails', placeholder: t("invitation.invitees_placeholder")
  .email-validation-help= t('error.invalid_email')
  %br
  %br
  = form.input :recipients, as: :hidden, input_html: { class: 'recipients' }
  - unless @group.is_setup?
    %p= t("invitation.invites_more_help")
.control-group
  - body_text = @group.is_setup? ? t('invitation.body2') : t('invitation.body_editable', group: group.name) 
  = form.input :message_body, label: false, as: :text, input_html: { class: 'validate-presence', value: body_text }, label: t("invitation.message_body")
  .inline-help= t("group_setup_form.errors.invites_body")
- unless @group.is_setup?
  %p= t("invitation.invites_more_help1")

