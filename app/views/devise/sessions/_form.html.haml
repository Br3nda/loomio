= simple_form_for(@user, url: user_session_path) do |f|
  .link-container
    = image_tag "google_icon.png"
    = link_to "Log in with Google", root_url
  .separator-container
    .separator
      = "or"
  - if @invitation
    = f.input :email, :input_html => { :value => @invitation.recipient_email }, label: "Log in with your email address", required: false
  - else
    = f.input :email, label: "Log in with your email address", required: false
  = f.input :password, label: false
  #input_options
    = render "devise/shared/links"
  .sign-in-button
    = f.submit t(:sign_in), class: "btn btn-info btn-large", id: "sign-in-btn", :data => { :disable_with => t(:sign_in) }
  #remember-me
    = f.input :remember_me, :as => :boolean, label: false, inline_label: t(:remember_me) if devise_mapping.rememberable?
  #new-account
    = "Don't have an account?"
    = link_to "Create one now!", root_url, id:'create_account'