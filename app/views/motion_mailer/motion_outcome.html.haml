= render '/application/mailer_doctype'
%html
  %h2= t(:outcome)
  %p= @motion.outcome

  %h2= t(:proposal)
  %p= @motion.name

  %p= @motion.description

-if @motion.unique_votes.present?
  %h4.positions-title= t(:positions).capitalize
  %table
    -last_vote = @motion.unique_votes.last
    -@motion.unique_votes.each do |vote|
      %tr{ :class => ("cell-border-bottom" unless vote==last_vote) }
        %td= vote.user_name
        %td.proposal-position{class: vote.position_to_s}= vote.position_to_s
        %td
          -if vote.statement.present?
            = vote.statement

  %p= t(:proposal_closed_when, when: time_ago_in_words(motion.closed_at))
  %p= t(:proposed_when_by_who, when: time_ago_in_words(motion.created_at), who: motion.author_name)
  %p= t(:engagement_on_closed_proposal, percent: motion.percent_voted, :numerator => (motion.group_size_when_voting - motion.members_not_voted_count), denominator:  motion.group_size_when_voting)

  = render 'user_mailer/unsubscribe_link_text'
