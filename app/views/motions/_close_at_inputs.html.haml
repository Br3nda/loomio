.control-group.motion-closing-inputs
  - user_timezone = ActiveSupport::TimeZone::MAPPING.select {|k, v| v == user.time_zone }.keys.first
  = form.input :close_at_date, as: :date_picker, input_html: { class: 'motion-close-at-date validate-presence' }
  = form.input :close_at_time, as: :select, collection: populate_time_select, include_blank: false, label: false, input_html: { class: 'motion-close-at-time' }
  = form.input :close_at_time_zone, default: user_timezone, include_blank: false, label: false, input_html: { class: 'motion-close-at-time-zone' }
  .inline-help= t("group_setup_form.errors.motion_closing_inputs")