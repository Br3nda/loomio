= simple_form_for @group_request do |f|
  = f.input :admin_name, label: 'What is your name?', placeholder: "e.g. Harriot Maclarirot"
  = f.input :admin_email, label: 'What is your email address?', placeholder: "e.g. harriot@grocerycoop.com"
  = f.input :name, label: 'What is the name of your group?', placeholder: "e.g. Harriot's Grocery Co-op"
  / = f.submit 'Sign up', class: 'btn btn-info btn-large'
  = link_to 'Sign up', "/group_requests/3/sign_up_confirmation", class: 'btn btn-info btn-large'